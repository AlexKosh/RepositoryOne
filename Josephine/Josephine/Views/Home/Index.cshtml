@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="Josephine">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/animate.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.3.16/angular-animate.min.js"></script>
    <script src="~/Scripts/Views/Home/app.js" type="text/javascript"></script>
    <title>Products</title>
</head>

<body ng-controller="HomeController" class="container">
    <div class="row" ng-show="isCreatingNewOrder">
        <h2>Новый заказ</h2>
        <form class="form-horizontal" role="form">            

            <div class="col-lg-6">

                <div class="form-group">
                    <label class="col-lg-4 control-label" for="emplName">Заказ принял: </label>
                    <div class="col-lg-8">
                        <input type="text" placeholder="Имя сотрудника..." class="form-control" id="emplName" tabindex="1" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 control-label" for="custSurname">ФИО клиента: </label>
                    <div class="col-lg-4">
                        <input type="text" placeholder="Фамилия..." class="form-control" id="custSurname" tabindex="2" />
                    </div>
                    <div class="col-lg-4">
                        <input type="text" placeholder="Имя..." class="form-control" id="custName" tabindex="3" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-4 control-label" for="shipMethod">Способ доставки: </label>
                    <div class="col-lg-8">
                        <select class="form-control" id="shipMethod" ng-model="shipMethodSelect" tabindex="4">
                            <option value="1">Самовывоз</option>
                            <option value="2">Автобус</option>
                            <option value="3">Новая Почта</option>
                            <option value="3">Автолюкс</option>
                            <option value="2">Другое</option>
                        </select>
                    </div>
                </div>

                <div class="form-group" ng-hide="shipMethodSelect != 2 && shipMethodSelect != 3">
                    <label class="col-lg-4 control-label" for="shipFrom">Место отправки: </label>
                    <div class="col-lg-8">
                        <input type="text" placeholder="Откуда..." class="form-control" id="shipFrom" tabindex="5" />
                    </div>
                </div>

                <div class="form-group" ng-hide="shipMethodSelect != 2 && shipMethodSelect != 3">
                    <label class="col-lg-4 control-label" for="shipWhere">Адрес доставки: </label>
                    <div class="col-lg-4">
                        <input type="text" placeholder="Город..." class="form-control" id="shipWhere" tabindex="6" />
                    </div>
                    <div class="col-lg-4">
                        <input type="text" placeholder="Адрес..." class="form-control" tabindex="7" />
                    </div>
                </div>

                <div class="form-group" ng-show="shipMethodSelect != 3">
                    <label class="col-lg-4 control-label"> Время отправки: </label>
                    <div class="col-lg-4">
                        <input class="form-control" type="datetime-local"
                               tabindex="8" />
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="datetime-local"
                               tabindex="9" />
                    </div>
                </div>

            </div>

            <div class="col-lg-6">

                <div class="form-group">
                    <label class="col-lg-3 control-label" for="payMethod">Способ оплаты: </label>
                    <div class="col-lg-4">
                        <select class="form-control" id="payMethod" ng-model="payMethodSelect" tabindex="10">
                            <option value="1">Наличные</option>
                            <option value="0">Водитель</option>
                            <option value="1">Банк</option>
                            <option value="0">Курьер</option>
                            <option value="1">Денежный перевод</option>
                            <option value="1">Наложенный платеж</option>
                        </select>
                    </div>
                    <div ng-hide="payMethodSelect != 0">
                        <label class="col-lg-1 control-label" for="payCode">Код: </label>
                        <div class="col-lg-4">
                            <input type="text" placeholder="Номер конверта..." class="form-control" id="payCode" tabindex="11" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label" for="orderDescr">Описание:</label>
                    <div class="col-lg-10">
                        <textarea class="form-control" rows="2" id="orderDescr"></textarea>
                    </div>
                </div>

                <div class="row">
                    <label class="col-lg-3 text-center" for="paid">оплачено: </label>
                    <label class="col-lg-3 text-center" for="balance">баланс: </label>
                    <label class="col-lg-2 text-center" for="discount">скидка: </label>
                    <label class="col-lg-4 text-center" for="sum">сумма: </label>
                </div>

                <div class="row">
                    <div class="col-lg-3">
                        <input type="number" value="0" class="form-control text-muted" 
                               id="paid" tabindex="12" />
                    </div>

                    <div class="col-lg-3">
                        <input type="text" disabled value="0" class="form-control text-center" id="balance" />
                    </div>

                    <div class="col-lg-2">
                        <input type="number" value="0" class="form-control" id="discount" tabindex="13  " />
                    </div>
                    <div class="col-lg-4">
                        <input type="text" disabled value="0" class="form-control text-center" 
                               style="font-size:x-large" id="sum"/>
                    </div>
                    @*<button class="col-lg-4 btn btn-success disabled" style="font-size:x-large" id="sum">4500 </button>*@

                </div>

            </div>

        </form>
    </div>

    <div class="row">
        <br />
        <left-table></left-table>
        <right-table></right-table>
    </div>
</body>
</html>
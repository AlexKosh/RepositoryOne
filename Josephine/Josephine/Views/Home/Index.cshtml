@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="Josephine">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.3.16/angular-animate.min.js"></script>
    <script src="~/Scripts/Views/Home/app.js" type="text/javascript"></script>
    <title>Products</title>
    <style>
        .btn-header {
            width: 95px;
        }
        .btn-tableData{
            width: 42px;
        }
        .animate-table-radio{            
            -webkit-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;
              -moz-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;
                -o-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;
                  transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s;                  
        }
        .animate-table-radio.ng-hide{
            opacity: 0;
            
        }
        .animate-table-radio.ng-hide-add.ng-hide-add-active{
            opacity: 1;            
        }       
         
        .animate-table-table{
           
        }

        .animate-table-table.ng-leave,
        .animate-table-table.ng-move,
        .animate-table-table.ng-enter{            
            -webkit-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
              -moz-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
                -o-transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
                  transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
        }
        .animate-table-table.ng-leave.ng-leave-active,
        .animate-table-table.ng-move,
        .animate-table-table.ng-enter {
            opacity: 0;
            max-height: 0;
        }

        .animate-table-table.ng-leave,
        .animate-table-table.ng-move.ng-move-active,
        .animate-table-table.ng-enter.ng-enter-active{
            opacity: 1;
            
        }
        .animate-table-table.ng-enter-stagger {
            /* this will have a 100ms delay between each successive enter animation */
            -webkit-transition-delay: 0.04s;
            transition-delay: 0.04s;
            /* in case the stagger doesn't work then these two values
            must be set to 0 to avoid an accidental CSS inheritance */
            -webkit-transition-duration: 0s;
            transition-duration: 0s;
        }        
    </style>

</head>

<body ng-controller="HomeController" class="container">
    <div class="row">
        <br />
        <div class="col-lg-2"></div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4"></div>
    </div>

    <div class="row">
        <br />
        <left-table></left-table>
        <right-table></right-table>
    </div>
</body>
</html>
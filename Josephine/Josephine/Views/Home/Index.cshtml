@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="Josephine">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
    <script src="~/Scripts/Views/Home/app.js" type="text/javascript"></script>
    <title>Products</title>
    <style>
        .btn-header {
            width: 80px;
        }
    </style>

</head>

<body ng-controller="HomeController">
    <br />
    <button class="btn btn-success" ng-click="getData()">Get data</button>
    <br />
    <span>{{response.DataNotations}}</span>
    <h4 ng-repeat="n in response.DataNotations">
        {{n}}
        <br />
    </h4>
    
    <h3>{{response.DataNotations[417].Sizes}}</h3>
    
    <br />
    <div class="row">
        <div class="col-lg-6">
            <table ng-repeat="modelArr in response.Data" class="table table-bordered table-striped">                
                <tr>
                    <th class="btn btn-primary btn-header">{{modelArr[0][0].ModelNumber}}</th>
                    <th class="btn btn-primary" ng-repeat="size in response.DataNotations[modelArr[0][0].ModelNumber].Sizes">{{size}}</th>
                </tr>
                <tr ng-repeat="modelArrByColors in modelArr"
                    >
                    <td class="btn btn-primary btn-header">
                        {{modelArrByColors[0].Color}}
                    </td>

                    <td ng-click="cl(modelArr[0][0].ModelNumber)" 
                        ng-repeat="modelArrByColorsBySizes in modelArrByColors" 
                        class="btn btn-default">{{modelArrByColorsBySizes.Size}}</td>
                </tr>

            </table>
        </div>
        <div class="col-lg-6">{{response.Data}}</div>
    </div>
</body>
</html>
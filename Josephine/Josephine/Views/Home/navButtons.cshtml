<div class="row">
    <div class="col-lg-6">
        <div class="btn-group" data-toogle="buttons">
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.store">
                <input type="radio" checked ng-model="leftTableView" ng-value="storeData" ng-click="isSelected = 'st'">Store</input>
            </label>
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.warehouse" ng-click="isSelected = 'wh'">
                <input type="radio" ng-model="leftTableView" ng-value="warehouseData">Warehouse</input>
            </label>                     
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.orders" ng-click="isSelected = 'ord'">
                <input type="radio" ng-model="leftTableView" ng-value="1">Orders</input>
            </label>
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.customers" ng-click="isSelected = 'cust'">
                <input type="radio" ng-model="leftTableView" ng-value="2">Customers</input>
            </label>
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.sales" ng-click="isSelected = 'sales'">
                <input type="radio" ng-model="leftTableView" ng-value="3">Sales</input>
            </label>
        </div>
    </div>
    <div class="col-lg-6" ng-show="isSelected != 'sales'">
        <div class="btn-group" data-toogle="buttons">
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.select">
                <input type="radio" ng-model="rightTableView" ng-value="selected" ng-click="isSelectedRight = 'sel'">Selected</input>
            </label>
            <button class="btn btn-warning animate-table-radio" ng-show="isGotData.select"
                    ng-click="isCreatingNewOrder = !isCreatingNewOrder">
                Make an order
            </button>
            <button class="btn btn-danger animate-table-radio" ng-show="isGotData.select"
                    ng-click="selected = {Data: []}; rightTableView = selected; isGotData.select = false; isSelectedRight = null">
                Clear order
            </button>
            <label class="btn btn-default animate-table-radio" ng-show="isGotData.orderSelected">
                <input type="radio" ng-model="rightTableView" ng-value="selectedOrder" ng-click="isSelectedRight = 'ordSel'">Selected order</input>
            </label>
        </div>
    </div>
</div>
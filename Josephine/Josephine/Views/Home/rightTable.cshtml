<div class="col-lg-6">        
    <br />
    <h2 ng-show="isGotData.orderSelected && isSelectedRight == 'ordSel'" style="margin-top:1px">Заказ #{{rightTableView.OrderId}}</h2>
    <table ng-repeat="modelArr in rightTableView.Data" class="table animate-table-table">          
        <tr>
            <th class="btn btn-primary btn-header" ng-click="cl(rightTableView.Data[0][0][0])">{{modelArr[0][0].ModelNumber}}</th>
            <th class="btn btn-primary btn-tableData"
                ng-repeat="size in warehouseData.DataNotations[modelArr[0][0].ModelNumber].Sizes">
                {{size}}
            </th>
        </tr>
        <tr ng-repeat="modelArrByColors in modelArr">
            <td class="btn btn-primary btn-header">
                {{modelArrByColors[0].Color}}
            </td>

            <td ng-click="selectProduct(product, modelArrByColors)"
                ng-repeat="product in modelArrByColors"
                class="btn btn-default btn-tableData">
                {{product.Quantity}}
            </td>
        </tr>

    </table>
</div>


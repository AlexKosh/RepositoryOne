@model SandBox.Models.WarehouseItem

@{
    ViewBag.Title = "AddOrEditItem";
}

<h2>AddOrEditItem</h2>

@{
    //SandBox.Models.WarehouseItem x = new SandBox.Models.WarehouseItem();
}

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Model number:</label>
        @Html.TextBoxFor(x => x.ItemNumber, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Color:</label>
        @Html.TextBoxFor(x => x.Color, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Size:</label>
        @Html.TextBoxFor(x => x.Size, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Quantity:</label>
        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Price:</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })        
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete" />
    </div>
}


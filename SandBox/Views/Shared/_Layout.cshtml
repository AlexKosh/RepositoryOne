<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SandBox", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-btn" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Warehouse", "Index", "OnWarehousesStock",
                        new { area = "Warehouse" }, new { @class = "navbar-btn" })
                    </li>
                    <li>
                        @Html.ActionLink("Store", "Index", "OnStoresStock",
                        new { area = "Store" }, new { @class = "navbar-btn" })
                    </li>
                    <li>
                        @Html.ActionLink("Order", "Index", "Order",
                        new { area = "" }, new { @class = "navbar-btn" })
                    </li>
                    <li>
                        @Html.ActionLink("Admin", "Index", "AdminActions",
                        new { area = "Admin" }, new { @class = "navbar-btn" })
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @if (TempData["Error"] != null)
        {
            
            <div class="alert alert-danger text-center">
                <h3>
                    @TempData["Error"]
                </h3>
            </div>
        }
        @if (TempData["Success"] != null)
        {

            <div class="alert alert-success text-center">
                <h3>
                    @TempData["Success"]
                </h3>
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>